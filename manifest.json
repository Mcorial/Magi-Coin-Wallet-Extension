{
  "manifest_version": 2,
  "name": "Coin Magi Wallet",
  "short_name": "Coin Magi",
  "description": "Magi Coin Wallet Extension",
  "version": "0.1",
  "minimum_chrome_version": "38",
  "permissions": [ "storage", "unlimitedStorage", "http://*/", "https://*/" ],
  "icons": {
    "16": "assets/16.png",
    "32": "assets/32.png",
    "64": "assets/64.png",
    "128": "assets/128.png"
  },

  "browser_action": {
    "default_icon": "assets/128.png",
    "default_title": "Coin Magi",
    "default_popup": "index.html"
  },
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}